<div class="jumbotron">

<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @post.rating %>
  <small><%= @post.created_at %></small>
</p>
<% if User == current_user %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', user_profile_path(@post.user) %>

<%= link_to 'History', history_post_path(@post) %>
</div>


