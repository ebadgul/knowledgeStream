<%= form_for(@post, class: 'container form-horizontal') do |f| %>
    <%= render partial: 'shared/error_messages', object: @post, as: 'active_object' %>

<fieldset>
    <div class="row form-group">
        <%= f.label :title, class: 'col-lg-2 control-label' %>
        <div class="col-lg-6">
            <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
        </div>
    </div>
    <div class="row form-group">
        <%= f.label :description, class: 'col-lg-2 control-label' %>
        <div class="col-lg-6">
            <%= f.text_area :description, class: 'form-control' %>
        </div>
    </div>
</fieldset>

<div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Create Post", :class => 'btn btn-primary' %>
        <button type="reset" class="btn btn-default">Cancel</button>
    </div>
</div>
<% end %>
