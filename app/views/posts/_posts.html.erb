<table class ="table">
	<thead>
		<tr>
			<th>User</th>
			<th>Title</th>
			<th>Description</th>
			<th>Rating</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= post.user.name %></td>
			<td><%= post.title %></td>
			<td><%= post.description %></td>
			<td><%= post.rating %></td>
			<% if post.user == current_user %>
			<td><%= link_to 'Show', post %></td>
			<td><%= link_to 'Edit', edit_post_path(post) %></td>
			<td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>

</table>