<div class="tab-pane fade active in" id="home">
    <table class ="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Comment</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
        <% @comments.each do |cmnt| %>
            <tr>
            <td><%= cmnt.user.name %></td>
            <td><%= cmnt.comment %></td>
            <td><%= link_to 'Show', cmnt %></td>
            <% if cmnt.user == current_user %>
                <td><%= link_to 'Edit', edit_comment_path(cmnt) %></td>
            <td><%= link_to 'Destroy', cmnt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
        </tbody>

    </table>


</div>

