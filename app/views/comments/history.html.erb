<h1>Comment History</h1>

<div class="tab-pane fade active in" id="home">
    <table class ="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Comment</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
        <% @comment.comment_histories.each do |cmnt| %>
            <tr>
            <td><%= @comment.user.name %></td>
            <td><%= cmnt.comment_str %></td>
        </tr>
    <% end %>
        </tbody>

    </table>


</div>

